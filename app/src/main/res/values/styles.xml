<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="EditTextStyleTop">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#9A9A9A</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Edit_text_height</item>
        <item name="android:layout_marginLeft">@dimen/Edit_text_margin</item>
        <item name="android:layout_marginRight">@dimen/Edit_text_margin</item>
        <item name="android:drawableLeft">@drawable/ic_glass_mug_black_24dp</item>
        <item name="android:hint">@string/Email_Text</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/edit_text_cur_top</item>
        <item name="android:layout_below">@+id/GifBeer</item>

    </style>
    <style name="EditTextStyleBotton">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#9A9A9A</item>
        <item name="android:hint">@string/Password_Text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Edit_text_height</item>
        <item name="android:layout_marginBottom">@dimen/Edit_text_margin</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginLeft">@dimen/Edit_text_margin</item>
        <item name="android:layout_marginRight">@dimen/Edit_text_margin</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:background">@drawable/edit_text_cur_botton</item>
        <item name="android:layout_below">@+id/EditTextEmail</item>
        <item name="android:drawableLeft">@drawable/dots_vertical</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>


</resources>
