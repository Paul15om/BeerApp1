<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditTextStyleTop">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#9A9A9A</item>
        <item name="android:drawableLeft">@drawable/ic_glass_mug_black_24dp</item>
        <item name="android:hint">@string/prompt_email</item>
        <item name="android:background">@drawable/edit_text_cur_top</item>

    </style>

    <style name="EditTextStyleBotton">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#9A9A9A</item>
        <item name="android:hint">@string/prompt_password</item>
        <item name="android:background">@drawable/edit_text_cur_botton</item>
        <item name="android:layout_below">@+id/email</item>
        <item name="android:drawableLeft">@drawable/dots_vertical</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
